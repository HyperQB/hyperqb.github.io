MODULE main
VAR
  s : 0..8;

ASSIGN
  init(s) := 0;

  next(s) :=
    case
      s = 0 : 1;

      -- one abstract mid state that branches to each terminal case
      s = 1 : {2, 3, 4, 5, 6, 7, 8};

      -- each terminal case self-loops
      s = 2 : 2;
      s = 3 : 3;
      s = 4 : 4;
      s = 5 : 5;
      s = 6 : 6;
      s = 7 : 7;
      s = 8 : 8;

      TRUE  : s; -- totalize
    esac;